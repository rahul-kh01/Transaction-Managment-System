# Railway Production Environment Variables
# Copy these to Railway dashboard environment variables

# API Configuration
VITE_API_URL=https://your-backend.railway.app

# Application Configuration
VITE_APP_NAME=Transaction Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Complete POS System with Inventory Management

# Build Configuration
NODE_ENV=production
VITE_BUILD_TARGET=es2020
VITE_BUILD_MINIFY=esbuild
VITE_BUILD_SOURCEMAP=false

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_DEVTOOLS=false

# Performance Configuration
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_BUILD_OUTPUT_DIR=dist

# Railway-specific
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE=pos-frontend
