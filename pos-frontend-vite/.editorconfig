# EditorConfig helps maintain consistent coding styles
# Matches the project's package.json and config files

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# JavaScript/JSX files  
[*.{js,jsx}]
indent_size = 2
quote_type = single

# CSS files
[*.css]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

